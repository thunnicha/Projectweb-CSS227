<%- include('../partials/header.ejs') %>



<div class="container-fluid ">
    <% if ( error && error.length > 0 ) { %>
        <div class="alert alert-danger" role="alert" style="position: absolute; width: 100%;">
            <%= error %>
        </div>
    <% } %>
    
    <% if ( success && success.length > 0 ) { %>
        <div class="alert alert-success" role="alert" style="position: absolute; width: 100%;">
            <%= success %>
        </div>
    <% } %>
    <link rel= "stylesheet" href="stylesheets/login.css">
    <div id="form" style="box-shadow: 0px 10px 10px rgb(179, 179, 179); background-color: white; justify-items: center; align-items: center; padding-bottom: 10%; border-radius: 2%; margin-top: 10%; height: 70%;">
        <div id="inside-form">
            <center><h1 id="head" style=" margin-bottom: 8%; text-transform: uppercase; font-weight: bolder; color: goldenrod; padding-left: 4%;" >EMPRISSED</h1>
            <form action="/register" method="POST">
               
                <div class="mb-3">
                    <input type="text" class="form-control"   placeholder="firstname"name="firstname">
                </div>
                <div class="mb-3">
                  
                    <input type="text" class="form-control" placeholder="lastname" name="lastname">
                </div>
                <div class="mb-3">
               
                    <input type="text" class="form-control" placeholder="username" name="username">
                </div>
                <div class="mb-3">
                    
                    <input type="password" class="form-control" placeholder="password" name="password">
                </div>
                <button type="submit" class="mt-3 btn btn-outline-dark btn-lg" style="width:70%; margin-bottom: 5%; ">SIGN UP</button>
            </form>
            <span class="one" id="alredy"style=" margin-bottom:4%">Already have an account?</span> <a href="/login" class="two">Login here.</a></center>
        </div>
    </div>
    </div>

    






